uint8_t whichBtn()
{
    uint8_t ret = 0b0000;

    HAL_GPIO_ReadPin(nSW_UP_GPIO_Port, nSW_UP_Pin);
    HAL_GPIO_ReadPin(nSW_DW_GPIO_Port, nSW_DW_Pin);
    HAL_GPIO_ReadPin(nSW_UP_GPIO_Port, nSW_UP_Pin);
    HAL_GPIO_ReadPin(nSW_UP_GPIO_Port, nSW_UP_Pin);
    HAL_GPIO_ReadPin(nSW_UP_GPIO_Port, nSW_UP_Pin);

    while (!digitalRead(UP_BTN))
        ret |= UP;
    while (!digitalRead(DW_BTN))
        ret |= DW;
    while (!digitalRead(V_I_BTN))
        ret |= VI;
    if (!digitalRead(O_EN_BTN))
        ret |= OEN;
    return ret;
}
